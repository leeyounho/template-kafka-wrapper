<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔에 로그를 출력하는 Appender 정의 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.micrometer.core.instrument.push.PushMeterRegistry" level="ERROR"/>
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.springframework" level="ERROR"/>

    <appender name="metricsAppender1" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics1.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics1-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="metricsAppender2" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics2.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics2-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="metricsAppender3" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics3.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics3-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="metricsAppender4" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics4.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics4-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="metricsAppender5" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/metrics5.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/metrics5-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="metrics.kafka.producer" level="INFO" additivity="false">
        <appender-ref ref="metricsAppender1" />
    </logger>

    <logger name="metrics.kafka.consumer" level="INFO" additivity="false">
        <appender-ref ref="metricsAppender2" />
    </logger>

    <logger name="metrics.jvm" level="INFO" additivity="false">
        <appender-ref ref="metricsAppender3" />
    </logger>

    <logger name="metrics.system" level="INFO" additivity="false">
        <appender-ref ref="metricsAppender4" />
    </logger>

    <logger name="metrics.logging" level="INFO" additivity="false">
        <appender-ref ref="metricsAppender5" />
    </logger>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
